<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/message_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/TopicName"
                            android:textSize="10pt"
                            android:textColor="#000000"
                            android:gravity="center_vertical"
                            android:paddingRight="100dp"
                            android:layout_marginLeft="10dp" />
                </LinearLayout>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/TopicActivation"
                    android:background="@drawable/subsc_state"
                    android:layout_alignTop="@+id/message_container"
                    android:layout_toRightOf="@+id/message_container"
                    android:gravity="right"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginRight="10dp" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/TopicUnsubsc"
                    android:background="@drawable/delete_topic"
                    android:layout_alignTop="@+id/message_container"
                    android:layout_toRightOf="@+id/TopicActivation"
                    android:gravity="right"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp" />
        </RelativeLayout>

</RelativeLayout>